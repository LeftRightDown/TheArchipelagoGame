<Page x:Class="TheArchipelagoGame.Location"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheArchipelagoGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Location">

    <Grid>
        <Rectangle x:Name="SideBar" Fill="#FFF6EAE0" HorizontalAlignment="Left" Height="447" Stroke="Black" VerticalAlignment="Top" Width="199"/>
        <Label x:Name="IslandTitle" Content="TITLE" HorizontalAlignment="Left" Margin="263,18,0,0" VerticalAlignment="Top" Height="62" Width="487" Foreground="#FFF6EAE0" FontFamily="Showcard Gothic" FontSize="24"/>
        <Label x:Name="IslandNarration" Content="Label" HorizontalAlignment="Left" Margin="263,119,0,0" VerticalAlignment="Top" Height="301" Width="487" Foreground="#FF1E2020" Background="#FFF6EAE0" FontSize="20"/>
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" Margin="10,416,0,0" VerticalAlignment="Top" Width="64" FontSize="16" FontStretch="Normal" FontFamily="Showcard Gothic" Background="#FF1A1A1A" Foreground="#FFCACACA" Click="BackButton_Click"/>
        <Button Content="Quest" HorizontalAlignment="Left" Margin="100,411,0,0" VerticalAlignment="Top" Foreground="#FFF6EAE0" Background="#FF1A1A1A" FontFamily="Showcard Gothic" FontSize="20"/>

    </Grid>
</Page>
