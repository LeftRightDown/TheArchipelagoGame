<Page x:Class="TheArchipelagoGame.Start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheArchipelagoGame"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="Start" Height="534">

    <Grid>
        <Rectangle x:Name="SideBar" Fill="#FFF6EAE0" Height="447" Stroke="Black" VerticalAlignment="Top" Margin="0,0,601,0"/>
        <Label x:Name="GameTitle" Content="The Archipelago" Margin="4,10,608,0" VerticalAlignment="Top" FontFamily="Showcard Gothic" FontSize="20" Foreground="#FF1E2020"/>
        <Button x:Name="Button1" Content="Start" Margin="10,118,614,0" VerticalAlignment="Top" Height="58" Click="NavigateButton_Click" FontFamily="Rockwell" IsCancel="True" FontSize="36" Foreground="#FFF6EAE0" Background="#FF1E2020"/>
        <Button x:Name="Button2" Content="Credits" Margin="10,235,614,0" VerticalAlignment="Top" Height="58" Click="NavigateButton_Click" FontSize="36" FontFamily="Rockwell" Foreground="#FFF6EAE0" Background="#FF1E2020"/>
        <Button x:Name="Button3" Content="Exit" Margin="10,361,614,0" VerticalAlignment="Top" Height="58" FontSize="36" FontFamily="Rockwell" Click="NavigateButton_Click" Foreground="#FFF6EAE0" Background="#FF1E2020"/>

    </Grid>
</Page>
